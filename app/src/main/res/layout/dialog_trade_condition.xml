<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dp_25"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_above="@+id/line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:text="@string/kind_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/type_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@null">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:text="@string/time_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lay1"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one_week_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/one_week"/>
                <TextView
                    android:id="@+id/one_month_tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/one_month"/>
                <TextView
                    android:id="@+id/three_month_tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/three_month"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/set_time_tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/set_time"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/lay"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one_month_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/one_month"/>
                <TextView
                    android:id="@+id/three_month_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/three_month"/>


                <TextView
                    android:id="@+id/set_time_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/trade_dialog_corners"
                    android:textColor="@drawable/dialog_trade_font"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="@string/set_time"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_time_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@drawable/dialog_trade_font"
                android:background="@drawable/trade_dialog_corners"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_5"
                android:text="—"/>
            <TextView
                android:id="@+id/end_time_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp_5"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/trade_dialog_corners"
                android:textColor="@drawable/dialog_trade_font"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/keyword_lay"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/guanjian_zi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:text="@string/keywords"/>
            <LinearLayout
                android:id="@+id/guanjian_zi_Lay"
                android:layout_width="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/background_search"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/icon_search"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/iv_search"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/et_keyword"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:hint="请输入关键字"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:id="@+id/line"
        android:layout_above="@+id/bottom_lay"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/reset_but"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/btn_trade_reset"
                android:text="@string/but_reset"/>
            <Button
                android:id="@+id/sure_but"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_trade_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="@string/but_sure"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigation_b_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/transparent"
            android:orientation="vertical"
            >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>