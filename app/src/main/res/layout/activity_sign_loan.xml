<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/body_bg">
    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>
    <com.lr.biyou.mywidget.view.PageView
        android:id="@+id/page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.core.widget.NestedScrollView
                android:background="@color/body_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:layout_marginTop="@dimen/margin_top"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/black"
                            android:text="@string/loaner" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:id="@+id/tv_loaner"
                            android:text=""
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/laon_time_litmit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:text=""
                            android:id="@+id/tv_jiekuan_timelitmit"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/shouxin_money"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:id="@+id/tv_shouxin_money"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/rate_year"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"

                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:text=""
                            android:id="@+id/tv_rate_year"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/shouxin_date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:text=""
                            android:id="@+id/tv_shouxin_date"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:visibility="gone"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/item_padding"
                            android:gravity="center_vertical"
                            android:text="@string/lilv_style"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:id="@+id/lilv_type_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:text=""
                            android:layout_margin="@dimen/item_padding"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/pay_style"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:id="@+id/huankuan_type_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_15"
                            android:text=""
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/danbao_type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"/>
                        <TextView
                            android:id="@+id/danbao_type_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:text=""
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/watite_sign_contact"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/item_padding"
                        android:paddingBottom="@dimen/item_padding"
                        android:textSize="@dimen/sp_15"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divide_hight"
                        android:background="@color/divide_line"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rcv_conlist"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>


                    <Button
                        android:id="@+id/bt_read_agree"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/but_height"
                        android:background="@drawable/btn_next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17"
                        android:layout_margin="@dimen/dp_20"
                        android:text="@string/read_and_agree"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>>
        </LinearLayout>
    </com.lr.biyou.mywidget.view.PageView>

</LinearLayout>