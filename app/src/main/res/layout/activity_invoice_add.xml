<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/body_bg"
    >

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/body_bg">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:hint="@string/invoice_check_6"
                    android:text="@string/invoice_daima" />
                <EditText
                    android:id="@+id/code_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:maxLength="12"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_10"
                    android:hint="@string/invoice_daima_hint"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:hint="@string/invoice_check_6"
                    android:text="@string/invoice_haoma" />
                <EditText
                    android:id="@+id/number_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@null"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_10"
                    android:hint="@string/invoice_haoma_hint"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/gmf_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:hint="@string/invoice_check_6"
                        android:text="@string/invoice_date" />


                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:gravity="right"
                        android:hint="@string/invoice_date_hint"
                        android:textSize="@dimen/sp_15"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        />

                    <ImageView
                        android:id="@+id/qixian_arrow_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/android_list_idex"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/invoice_check_6" />
                <EditText
                    android:id="@+id/textcode_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@null"
                    android:maxLength="6"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_10"
                    android:hint="@string/invoice_check6_hint"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:hint="@string/invoice_check_6"
                    android:text="@string/invoice_money" />
                <EditText
                    android:id="@+id/money_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_10"
                    android:hint="@string/invoice_money_hint"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="元" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>

            <Button
                android:id="@+id/but_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/but_height"
                android:text="@string/invoice_import"
                android:background="@drawable/btn_next"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                android:layout_margin="@dimen/dp_20"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_80"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/divide_line"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="示例图"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center_vertical"
                        android:background="@color/divide_line"/>
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:src="@drawable/fapiao_example"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
