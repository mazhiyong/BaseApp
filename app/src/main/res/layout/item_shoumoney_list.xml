<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginBottom="@dimen/dp_5"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        android:focusable="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/state_iv"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lay"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/type_tv"
                    android:layout_width="wrap_content"
                    android:text="做多BT"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_deep"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:text="做多 BTC/USDT"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_deep"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="0dp"
                    android:text="19/05/06 15:32"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/deal_tv"
                    android:layout_width="wrap_content"
                    android:text="撤销"
                    android:background="@drawable/background_corners_gray_lightest"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/blue1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/lay"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divide_hight"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="委托量(张)"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="委托价(USD)"
                            android:textSize="@dimen/sp_13"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_width="wrap_content"
                            android:text="--"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout> <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dongtai_tv"
                        android:layout_width="match_parent"
                        android:text="触发价(USD)"
                        android:textSize="@dimen/sp_13"
                        android:gravity="right"
                        android:textColor="@color/gray"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="match_parent"
                        android:text="--"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="成交量(张)"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_4"
                            android:layout_width="wrap_content"
                            android:text="--"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="成交均价(USD)"
                            android:textSize="@dimen/sp_13"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_5"
                            android:layout_width="wrap_content"
                            android:text="--"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="手续费(BTC)"
                        android:textSize="@dimen/sp_13"
                        android:gravity="right"
                        android:textColor="@color/gray"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="match_parent"
                        android:text="--"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="止盈价格(USD)"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_7"
                            android:layout_width="wrap_content"
                            android:text="--"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="止损价格(USD)"
                            android:textSize="@dimen/sp_13"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/gray"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_8"
                            android:layout_width="wrap_content"
                            android:text="--"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:text="保证金(USD)"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/gray"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_9"
                        android:layout_width="match_parent"
                        android:text="--"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/divide_line"/>
</LinearLayout>