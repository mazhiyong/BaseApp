<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_35"
        android:text="手机注册"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/zhuti_lay"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_15"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"
            android:text="账号主体" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/loading_tip"
            android:id="@+id/tv_zhuti"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingRight="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/arrow_view"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/margin_top"
        android:visibility="gone"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_65"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:hint="@string/regist_account_phone_hint"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLength="20"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="wrap_content"
            android:hint="@string/regist_account_phone_code"
            android:background="@null"
            android:id="@+id/et_code"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:inputType="number"
            android:textSize="@dimen/sp_15"
            android:maxLength="6"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/dp_70"
            android:id="@+id/iv_code"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/back_card"
            android:layout_height="@dimen/dp_35"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_code"
            android:text="@string/regist_account_phone_code_send"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_yaocode"
            android:layout_width="wrap_content"
            android:hint="@string/regist_account_phone_yaocode"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@color/divide_line"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/but_height"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:text="@string/next"
        android:id="@+id/bt_next"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="@drawable/btn_next"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/regist_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/regist_account_email"
            android:textColor="@color/blue1"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_xieyi"
                android:layout_width="@dimen/dp_17"
                android:checked="true"
                android:visibility="gone"
                android:layout_height="@dimen/dp_17"
                android:layout_alignParentBottom="true"
                android:button="@null"
                android:background="@drawable/cart_select_selector"
                android:layout_marginTop="@dimen/dp_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_tip"
                android:textSize="@dimen/sp_14"
                android:text="@string/regist_account_to_longin"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>