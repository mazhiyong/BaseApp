<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/body_bg">
    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>
    <com.lr.biyou.mywidget.view.PageView
        android:id="@+id/page_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1787832"
                        android:textColor="@color/black_dark"
                        android:id="@+id/totall_shoumoney_tv"
                        android:textSize="@dimen/sp_17"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="当前应收账款总额"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_middle"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_10"
                    android:layout_width="@dimen/divide_hight"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1787832"
                        android:textColor="@color/black_dark"
                        android:id="@+id/max_jiemoney_tv"
                        android:textSize="@dimen/sp_17"
                        android:layout_gravity="center_horizontal"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="最大可借金额（元）"
                            android:textSize="@dimen/sp_14"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black_middle"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/tip_iv"
                            android:layout_width="@dimen/dp_16"
                            android:src="@drawable/tip"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/dp_20"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:textColor="@color/black_light"
                    android:text="付款截止日:2018-08-26至2018-08-26"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/total_tv"
                    android:gravity="right"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_light"
                    android:paddingRight="@dimen/dp_15"
                    android:text="共25笔"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.github.jdsjlzx.recyclerview.LRecyclerView
                    android:id="@+id/refresh_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/body_bg">
                </com.github.jdsjlzx.recyclerview.LRecyclerView>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:text="下一步"
                    android:textSize="@dimen/sp_17"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/btn_next"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/but_height"/>
            </LinearLayout>
        </LinearLayout>
    </com.lr.biyou.mywidget.view.PageView>
    <LinearLayout
        android:id="@+id/empty_lay"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_common_empty"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="暂无应收账款"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_dark"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_message"
            android:text="请联系XXXX确认已导入财务凭证"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_middle"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
