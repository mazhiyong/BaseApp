<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:background="@color/white"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <com.lr.biyou.mywidget.view.ShouShiPatternViewSmall
           android:layout_width="match_parent"
           android:layout_marginTop="@dimen/dp_30"
           android:layout_gravity="center"
           android:id="@+id/shoushi_small"
           android:layout_height="@dimen/dp_100"/>
       <TextView
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_marginTop="@dimen/dp_15"
           android:textSize="18sp"
           android:id="@+id/tv_tip"
           android:text="@string/draw_shoushi_tips"
           android:layout_height="wrap_content"/>

       <com.lr.biyou.mywidget.view.ShouShiPatternView
           android:layout_width="match_parent"
           android:id="@+id/shoushi_big"
           android:layout_marginLeft="@dimen/dp_5"
           android:layout_marginTop="@dimen/dp_15"
           android:layout_weight="1"
           android:layout_height="0dp"/>
       <Button
           android:layout_width="wrap_content"
           android:text="@string/setting_success"
           android:id="@+id/bt_set_sucess"
           android:layout_gravity="center"
           android:textColor="#ffffff"
           android:visibility="gone"
           android:layout_marginBottom="@dimen/dp_10"
           android:background="@drawable/background_corners_gray"
           android:layout_height="wrap_content"/>
   </LinearLayout>


</LinearLayout>