<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:visibility="gone"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/trade_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:background="@color/transparent"
        app:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="@dimen/dp_35"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/default_headimg"
                android:layout_height="@dimen/dp_35" />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Aa"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/agree_tv"
                android:layout_width="wrap_content"
                android:text="同意"
                android:visibility="gone"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/green_light"
                android:background="@drawable/background_yuanhuan_green"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/refuse_tv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:text="拒绝"
                android:visibility="gone"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/red_light"
                android:background="@drawable/background_yuanhuan_red"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/added_tv"
                android:layout_width="wrap_content"
                android:text="已添加"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/check_box"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cart_select_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="right"/>
        </LinearLayout>

        
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
</LinearLayout>