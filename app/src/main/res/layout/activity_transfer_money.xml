<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_iv"
        android:src="@drawable/default_headimg"
        android:layout_width="@dimen/dp_70"
        android:layout_margin="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/dp_70" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/background_yuanhuan_gray"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="@dimen/dp_8"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_background_blue"
                android:layout_height="@dimen/dp_8" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/circle_background_gray"
                android:layout_height="@dimen/dp_4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/circle_background_gray"
                android:layout_height="@dimen/dp_4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/circle_background_gray"
                android:layout_height="@dimen/dp_4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_width="@dimen/dp_8"
                android:background="@drawable/circle_background_red"
                android:layout_height="@dimen/dp_8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/from_lay"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="从"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/from_tv"
                    android:layout_width="0dp"
                    android:text="请选择"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:alpha="0.6"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/android_list_idex"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="到"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/to_tv"
                    android:layout_width="wrap_content"
                    android:text="请选择"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/change_iv"
            android:layout_margin="@dimen/dp_1_5"
            android:background="@color/gray_light2"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/icon5_hz2"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:id="@+id/divide_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <TextView
        android:id="@+id/middle_money_tv"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text="币种"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/type_lay"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            android:text="请选择类型"
            android:padding="@dimen/dp_15"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:alpha="0.6"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            android:text="余额: 0"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_25"
            android:textSize="@dimen/sp_14"
            android:text="≈ 0.00CNY"
            android:textColor="@color/gray"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="转账金额"
            android:padding="@dimen/dp_15"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_money"
            android:hint="0"
            android:inputType="numberDecimal"
            android:gravity="right"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:paddingRight="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cny_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:hint="≈ 0.00CNY"
            android:textSize="@dimen/sp_14"
            android:paddingBottom="@dimen/dp_5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/type2_tv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_13"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/selectall_tv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/aviable_tv"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <EditText
            android:background="@null"
            android:layout_width="0dp"
            android:hint="添加备注"
            android:padding="@dimen/dp_15"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/huzhuan_tv"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:text="转账"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_8"
        android:background="@drawable/btn_next_yellow"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
</LinearLayout>