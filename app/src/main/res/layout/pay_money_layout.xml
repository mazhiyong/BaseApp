<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/body_bg"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/background_color_lay"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_45">

        <LinearLayout
            android:id="@+id/left_back_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:gravity="center"
                android:src="@drawable/icon_back2" />

            <TextView
                android:id="@+id/back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:text="@string/but_back"/>
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/title_text"
            style="@style/title_text_style"
            android:drawableLeft="@drawable/icon0_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_140"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/right_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/right_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/right_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/background_color_lay2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/dp_35"
                        android:src="@drawable/wait"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/dp_35" />
                    <TextView
                        android:id="@+id/pay_type_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="请付款"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_22"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/item_padding"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/pay_money_tv"
                        android:layout_width="wrap_content"
                        android:text="￥ 0.00"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_22"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/item_padding"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/rmb"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/tv_repay_capital"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:inputType="numberDecimal"
                        android:maxLength="14"
                        android:textSize="@dimen/sp_17"
                        android:background="@null"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pay_time_tv"
                        android:layout_width="wrap_content"
                        android:text="请在15:00内完成付款"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text=" : ¥ "
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:visibility="gone"
                        android:textSize="14sp"/>
                </LinearLayout>


            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginBottom="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginLeft="@dimen/dp_30"
               android:layout_marginRight="@dimen/dp_30"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="订单号"
                       android:textColor="@color/gray"
                       android:textSize="@dimen/sp_15"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/dingdan_number_tv"
                       android:layout_width="wrap_content"
                       android:text=""
                       android:layout_marginLeft="@dimen/dp_20"
                       android:textColor="@color/black"
                       android:textSize="@dimen/sp_15"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/dp_8"
                   android:layout_marginBottom="@dimen/dp_8"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="单价"
                       android:hint="占位符"
                       android:textColor="@color/gray"
                       android:textSize="@dimen/sp_15"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/dingdan_money_tv"
                       android:layout_width="wrap_content"
                       android:text=""
                       android:layout_marginLeft="@dimen/dp_20"
                       android:textColor="@color/black"
                       android:textSize="@dimen/sp_15"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="数量"
                       android:hint="占位符"
                       android:textColor="@color/gray"
                       android:textSize="@dimen/sp_15"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/dingdan_amount_tv"
                       android:layout_width="wrap_content"
                       android:text=""
                       android:layout_marginLeft="@dimen/dp_20"
                       android:textColor="@color/black"
                       android:textSize="@dimen/sp_15"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/body_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:visibility="gone"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/loan_balance"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_loan_balance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_gravity="center"
                    android:src="@drawable/tip_icon"
                    android:layout_height="@dimen/dp_26"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/iv_select_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:src="@drawable/icon4_bank"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:text="银行卡"
                        android:id="@+id/zhifu_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        />
                </LinearLayout>


                <ImageView
                    android:id="@+id/zhifu_arrow_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/android_list_idex"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/zhanghu_yue_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="收款人"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/bank_people_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="@dimen/sp_16"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_16"
                    >

                    <TextView
                        android:id="@+id/yue_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="****"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        />
                    <ImageView
                        android:id="@+id/toggle_money"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right"
                        android:background="@drawable/switch_in_bank2"
                       />
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/zhanghu_ine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:id="@+id/yuanyin_lay"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:text="还款原因"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/white" >

                    <EditText
                        android:id="@+id/yy_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入还款原因"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:textSize="@dimen/sp_15"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@null"
                        android:gravity="left|top"
                        />

                    <TextView
                        android:id="@+id/count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/business_des_edit"
                        android:layout_alignRight="@+id/business_des_edit"
                        android:gravity="right"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/divide_line"
                        android:textSize="@dimen/very_small" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/bank_pay_lay"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/zhanghu_yue_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divide_hight"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:id="@+id/bank_num_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="银行卡号"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:id="@+id/bank_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/sp_16"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:id="@+id/copy_tv"
                        android:layout_width="@dimen/dp_15"
                        android:src="@drawable/icon4_copy"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/dp_15" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divide_hight"
                    android:background="@color/divide_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="开户银行"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:id="@+id/bank_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="@dimen/sp_16"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divide_hight"
                    android:background="@color/divide_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mobile_pay_lay"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="收款二维码"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/gray"
                        />
                    <ImageView
                        android:id="@+id/iv_code"
                        android:layout_width="@dimen/dp_25"
                        android:src="@drawable/erweimacode"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/dp_25" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divide_hight"
                    android:background="@color/divide_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xiyi_lay"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/check_box_xieyi"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/cart_select_selector"
                    />
                <TextView
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/xieyi_tv"
                    android:layout_width="wrap_content"
                    android:text="已阅读并同意《还款申请书》"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dp_15"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cancel"
                    android:background="@drawable/background_corners_gray"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/order"
                    android:background="@drawable/btn_next"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>


