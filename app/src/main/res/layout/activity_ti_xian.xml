<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/divide_line"/>
    <RelativeLayout
        android:id="@+id/rl_layout"

        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/item_padding"
        android:paddingBottom="@dimen/item_padding"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:text="@string/bank_card_title"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/iv_morecard"
            android:layout_toRightOf="@+id/text"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/black"
            android:text=""
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_tixin_maxmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="单日交易限额¥10000,00"
            android:visibility="gone"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_morecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/android_list_idex"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/ll_layout"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="账户余额(元)"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tv_yue_money"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="¥ 6666.66"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:visibility="gone"
        android:background="@color/divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/item_padding"
            android:paddingBottom="@dimen/item_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:text="@string/tixian_money" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="@color/black"

                    android:text="@string/rmb"/>
                <EditText
                    android:id="@+id/money_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:maxLength="14"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:textSize="25sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/divide_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tip_icon"/>
            <TextView
                android:id="@+id/tixian_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text=""/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_hight"
            android:background="@color/divide_line"/>
    </LinearLayout>

    <Button
        android:id="@+id/but_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/but_height"
        android:background="@drawable/btn_next"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:text="@string/but_next"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_25"
        android:id="@+id/tv_tips"
        android:visibility="gone"
        android:textSize="@dimen/sp_14"
        android:text="从您绑定的银行卡/账号，转账至平台账户"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/tv_toaccout_time"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:lineSpacingExtra="@dimen/dp_1"
        android:visibility="gone"
        android:textSize="@dimen/sp_14"
        android:text="到账时间：预计1-2个工作日内到账（双休日和法定节假日顺延）"
        android:layout_height="wrap_content"/>
</LinearLayout>
