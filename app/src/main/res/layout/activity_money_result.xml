<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="@color/body_bg"
                >

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/body_bg"

        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >



            <ImageView
                android:id="@+id/my_image"
                android:layout_width="@dimen/dp_150"
                android:layout_height="wrap_content"
                android:src="@drawable/wait"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_40"/>

            <TextView
                android:id="@+id/submit_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/submit_success"/>

            <TextView
                android:id="@+id/submit_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_20"
                android:visibility="gone"
                android:text="@string/applay_wait_tip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/title_lay1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:text="付款金额"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/value_tv1"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"
                    android:text="¥ 0.00"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/title_lay2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:text="付款金额"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/value_tv2"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"
                    android:text="¥ 0.00"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/title_lay3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_tv3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:text="付款金额"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/value_tv3"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center"
                    android:text="¥ 0.00"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>


            <Button
                android:id="@+id/but_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/but_height"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:textSize="@dimen/sp_17"
                android:background="@drawable/btn_next"
                android:text="@string/but_back"
                android:textColor="@color/white"
                 />
        </LinearLayout>
    </ScrollView>

</LinearLayout>