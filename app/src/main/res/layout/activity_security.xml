<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <LinearLayout
        android:id="@+id/phone_lay"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="手机"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/email_lay"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            android:text="邮箱"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/code_lay"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="支付密码"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>


    <TextView
        android:id="@+id/exit_tv"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_35"
        android:text="退出登录"
        android:padding="@dimen/dp_10"
        android:background="@drawable/btn_next"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
</LinearLayout>