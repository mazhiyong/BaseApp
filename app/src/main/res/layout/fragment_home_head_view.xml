<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <com.lr.biyou.mywidget.viewpager.BannerViewPager
        android:id="@+id/fl_banner"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_200"/>


    <com.github.why168.LoopViewPagerLayout
        android:id="@+id/mLoopViewPagerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_hight"
            android:background="@color/divide_line"
            />

        <com.lr.biyou.mywidget.view.IndexGridView
            android:id="@+id/gird_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_hight"
            android:background="@color/divide_line"
            />

    </LinearLayout>



    <!-- 精选活动 -->
    <LinearLayout
        android:id="@+id/specialty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white"
        android:orientation="vertical"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_hight"
            android:background="@color/divide_line"
            />

        <RelativeLayout
            android:id="@+id/special_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选活动"
                android:textColor="#333"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp_5"
                android:text="更多"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_hight"
            android:background="@color/divide_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:weightSum="3"
            >

            <ImageView
                android:id="@+id/specialty_image_0"
                android:layout_width="0dp"
                android:layout_height="126dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/specialty_image_1"
                android:layout_width="0dp"
                android:layout_height="126dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:scaleType="fitXY"

                />

            <ImageView
                android:id="@+id/specialty_image_2"
                android:layout_width="0dp"
                android:layout_height="126dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginBottom="@dimen/dp_6"
        />

</LinearLayout>