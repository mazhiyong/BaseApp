<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"

        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        android:focusable="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_lay"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="信用融资"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/type_tv"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="去借款"
                    android:textSize="@dimen/sp_14"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:id="@+id/go_borrow"
                    android:textColor="@color/btn_login_normal"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/background_blue"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_below="@+id/ll_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:layout_below="@+id/line"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="可用额度"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/amount_tv"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="年化利率"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/rate_tv"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="出借方"
                        android:hint="@string/four_zi"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/borrow_tv"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
</LinearLayout>