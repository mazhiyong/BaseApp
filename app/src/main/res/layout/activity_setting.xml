<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:id="@+id/head_image"
            android:layout_width="wrap_content"
            android:src="@drawable/logo"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_60"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:visibility="gone"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/welcome_lay"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="@string/welcome_pager"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_margin="@dimen/item_padding"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_welcome"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/item_padding"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:visibility="gone"
        android:background="@color/divide_line"/>

    <LinearLayout
        android:id="@+id/shared_lay"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="@string/share_text"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_margin="@dimen/item_padding"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/item_padding"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>

    <LinearLayout
        android:id="@+id/puhuibao_jieshao_lay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/list_item_selector"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            android:text="红涨绿跌"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/iv_about_pihuibao"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/about_us_lay"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:text="028-67878373"
            android:id="@+id/tv_phone_coutomer"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <LinearLayout
        android:id="@+id/version_check_lay"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="@string/app_version"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_0"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:text="V1.0"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_padding"
            android:layout_marginBottom="@dimen/item_padding"
            android:layout_marginLeft="@dimen/dp_0"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@drawable/android_list_idex"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>


    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>