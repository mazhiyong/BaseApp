<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/content_lay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_20"

            >

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="合同编号"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/gray_normal"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:id="@+id/hetong_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdfadsfasdfasdf"
                    android:textColor="@color/black22"
                    android:textSize="@dimen/sp_14"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_normal"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="签订日期"
                    />
                <TextView
                    android:id="@+id/hetong_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black22"
                    android:textSize="@dimen/sp_14"
                    android:text="2018-09-09"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_normal"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"
                    android:text="金额(元)"
                    android:layout_marginRight="@dimen/dp_15"
                    android:hint="@string/four_zi"
                    />
                <TextView
                    android:id="@+id/hetong_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black22"
                    android:textSize="@dimen/sp_14"
                    android:text="99999999.00"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="@dimen/dp_20"
                android:visibility="gone"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/cart_select_selector"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:checked="true"/>

            <TextView
                android:id="@+id/tv_relative"
                android:gravity=""
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="关联"
                android:visibility="gone"
                android:drawableRight="@drawable/more_1x"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_show"
                android:gravity=""
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="展开"
                android:drawableRight="@drawable/more_1x"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

