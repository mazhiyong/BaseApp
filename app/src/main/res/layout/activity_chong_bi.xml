<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/head_image"
            android:layout_width="@dimen/dp_150"
            android:src="@drawable/icon1_erweima"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_150"/>
        <TextView
            android:id="@+id/save_tv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="点击或长按保存二维码"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/background_corners_gray_light"
            android:textColor="@color/blue1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/link_tv"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="1asad123sdafas31asdf31ew5rt123adg1fa"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/copy_link_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="复制地址"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/background_corners_gray_light"
        android:textColor="@color/gray"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="充币数量"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_number"
        android:background="@null"
        android:paddingTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/divide_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line" />
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:text="钱包地址"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_address"
        android:background="@null"
        android:paddingTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line" />

    <TextView
        android:id="@+id/chongbi_tv"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:text="确  定"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_8"
        android:enabled="false"
        android:background="@drawable/btn_next"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/sp_14"
        />
</LinearLayout>