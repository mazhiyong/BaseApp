<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"
              android:orientation="vertical">

        <include
            android:id="@+id/top_layout"
            layout="@layout/title_leftbut_bar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_top"
                            android:background="@color/body_bg"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divide_hight"
                            android:background="@color/divide_line"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/guanxi_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:focusable="false">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingRight="@dimen/dp_15"
                                    android:paddingTop="@dimen/dp_12"
                                    android:paddingBottom="@dimen/dp_12"
                                    android:orientation="horizontal"
                                    >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="left|center_vertical"
                                            android:textSize="@dimen/sp_15"
                                            android:textColor="@color/black"
                                            android:text="@string/guanxi_user" />
                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/dp_2"
                                            android:layout_weight="1"/>
                                        <TextView
                                            android:id="@+id/name_tv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/please_choose"
                                            android:textSize="@dimen/sp_15"
                                            android:paddingRight="@dimen/dp_10"
                                            android:gravity="right"
                                            android:focusable="true"
                                            android:focusableInTouchMode="true"
                                            />
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/android_list_idex"/>
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divide_hight"
                            android:id="@+id/other_line"
                            android:background="@color/divide_line"/>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/other_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:focusable="false">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingRight="@dimen/dp_15"
                                    android:paddingTop="@dimen/dp_12"
                                    android:paddingBottom="@dimen/dp_12"
                                    android:orientation="horizontal"
                                    >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="left|center_vertical"
                                            android:textSize="@dimen/sp_15"
                                            android:textColor="@color/black"
                                            android:text="@string/other_info" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="left|center_vertical"
                                            android:textSize="@dimen/sp_15"
                                            android:textColor="@color/black"
                                            android:visibility="invisible"
                                            android:text="@string/other_info" />
                                        <EditText
                                            android:id="@+id/other_valut_edit"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:paddingRight="@dimen/dp_10"
                                            android:layout_marginLeft="@dimen/dp_30"
                                            android:textSize="@dimen/sp_15"
                                            android:hint="@string/please_write"
                                            />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divide_hight"
                            android:background="@color/divide_line"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:focusable="false">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingRight="@dimen/dp_15"
                                    android:paddingTop="@dimen/dp_12"
                                    android:paddingBottom="@dimen/dp_12"
                                    android:orientation="horizontal"
                                    >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="left|center_vertical"
                                            android:textSize="@dimen/sp_15"
                                            android:textColor="@color/black"
                                            android:text="@string/really_name" />
                                        <EditText
                                            android:id="@+id/really_name_value_edit"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:paddingRight="@dimen/dp_10"
                                            android:layout_marginLeft="@dimen/dp_30"
                                            android:hint="@string/hint_rellay_name"
                                            android:textSize="@dimen/sp_15"
                                            />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divide_hight"
                            android:background="@color/divide_line"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:focusable="false">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingRight="@dimen/dp_15"
                                    android:paddingTop="@dimen/dp_12"
                                    android:paddingBottom="@dimen/dp_12"
                                    android:orientation="horizontal"
                                    >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="left|center_vertical"
                                            android:textSize="@dimen/sp_15"
                                            android:textColor="@color/black"
                                            android:text="@string/id_card_2" />
                                        <EditText
                                            android:id="@+id/idcard_valut_edit"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@null"
                                            android:paddingRight="@dimen/dp_10"
                                            android:layout_marginLeft="@dimen/dp_30"
                                            android:hint="@string/id_card_edit_hint"
                                            android:digits="@string/shuzi_zimu"
                                            android:inputType="phone"
                                            android:textSize="@dimen/sp_15"
                                            />
                                </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divide_hight"
                            android:background="@color/divide_line"/>

                        <Button
                            android:id="@+id/but_next"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/but_height"
                            android:background="@drawable/btn_next"
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17"
                            android:text="@string/but_submit"/>

                </LinearLayout>
        </ScrollView>
</LinearLayout>