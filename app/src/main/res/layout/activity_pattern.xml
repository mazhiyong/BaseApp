<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/login_phone_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:layout_marginTop="@dimen/dp_20"
        app:cardPreventCornerOverlap="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        android:focusable="false">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:text="@string/shoushi_login" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/switch_shoushi_login"
                android:thumb="@drawable/switch_selector"
                android:track="@drawable/switch_track_selector"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="1.5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:text="@string/show_shoushi" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/switch_shoushi_show"
                android:thumb="@drawable/switch_selector"
                android:track="@drawable/switch_track_selector"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:id="@+id/ll_shoushi_update"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="1.5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:text="@string/update_shoushi" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/iv_shoushi_update"
                android:src="@drawable/android_list_idex"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>