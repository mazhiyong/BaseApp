<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/body_bg"
    >

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <ScrollView
        android:id="@+id/personal_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/body_bg"
        android:layout_below="@+id/top_layout"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/open_bank_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请填写***的银行卡信息"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:padding="@dimen/dp_10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="@string/bank_card_des"
                android:padding="@dimen/dp_10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_card_title"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"/>
                <EditText
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/bank_card_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/bank_card_edit_tip"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:inputType="numberSigned"
                    android:imeActionLabel="校验"
                    android:imeOptions="actionDone"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                android:id="@+id/kaihuhang_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:id="@+id/kaihuhang_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_card_open_type"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"/>
                <TextView
                    android:id="@+id/bank_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:hint="@string/bank_jiaoyan"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/jiaoyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_list_idex"
                    android:paddingRight="@dimen/dp_10"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/dp_6"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bank_card_open_address"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:padding="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/kaihu_bank_add_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/android_list_idex"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:visibility="gone"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/item_padding"
                    android:paddingBottom="@dimen/item_padding"/>
                <EditText
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/bank_card_phone_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/bank_card_phone"
                    android:textSize="@dimen/sp_15"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:maxLength="11"
                    android:textColor="@color/black"
                    android:background="@null"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <Button
                android:id="@+id/but_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/but_height"
                android:layout_margin="@dimen/dp_18"
                android:background="@drawable/btn_next"
                android:text="@string/but_submit"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/btn_login_text"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>