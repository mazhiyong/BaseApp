<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/qian_date"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                      />
                    <TextView
                        android:id="@+id/qd_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                       />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/ghs"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:gravity="right"
                        android:textColor="@color/black_light"
                        android:hint="@string/ht_code"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/ghs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ht_code"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                       />
                    <TextView
                        android:id="@+id/ht_code_tv"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                       />
                </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_jine"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginRight="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/all_jine_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/money_c"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                   />
                <TextView
                    android:id="@+id/go_borrow"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="我要借款"
                    android:textSize="@dimen/sp_14"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:textColor="@color/btn_login_normal"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/background_blue"
                    />
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
</LinearLayout>