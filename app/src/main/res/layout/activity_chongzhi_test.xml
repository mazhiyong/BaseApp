<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/divide_line"
        />
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:text="银行卡"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/iv_morecard"
            android:layout_toRightOf="@+id/text"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="--"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_tixin_maxmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="单日交易限额¥10000,00"
            android:visibility="gone"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_morecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/android_list_idex"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额(元)"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"/>

        <EditText
            android:id="@+id/tv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_5"
            android:inputType="numberDecimal"
            android:background="@null"
            android:hint="@string/money_hint"
            android:textSize="@dimen/sp_15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"
        />

    <Button
        android:id="@+id/bt_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/but_height"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_next"
        android:text="@string/chongzhi"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"/>
</LinearLayout>