<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/datetop_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line"
            />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:layout_below="@+id/datetop_line"
            android:text="@string/but_cancle"
            android:background="@drawable/item_select_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:layout_below="@+id/datetop_line"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:layout_below="@+id/datetop_line"
            android:textColor="@color/black"
            android:text="@string/but_sure"
            android:background="@drawable/item_select_bg"
            android:layout_alignParentRight="true"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/sure_tv"
            android:background="@color/divide_line" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/date_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/one_wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/two_wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/three_wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="#999999" />

</LinearLayout>