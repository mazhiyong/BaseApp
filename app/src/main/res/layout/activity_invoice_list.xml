<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/body_bg"
    >

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>
    <com.lr.biyou.mywidget.view.PageView
        android:id="@+id/page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_32"
                android:paddingBottom="@dimen/dp_30"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    android:text="已成功扫描20张发票"
                    android:textColor="@color/black22"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="如不再继续扫描发票，请点击“保存”按钮"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black_middle"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    >

                    <TextView
                        android:id="@+id/save_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_save"
                        android:text="保存"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/dp_10"
                        />
                    <TextView
                        android:id="@+id/next_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_ok"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:gravity="center"
                        android:text="扫描下一张"
                        android:textSize="@dimen/sp_17"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <TextView
                android:id="@+id/tv_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_middle"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:text="已扫描20张发票"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>

            <com.github.jdsjlzx.recyclerview.LRecyclerView
                android:id="@+id/refresh_list_view"
                android:background="@color/body_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.github.jdsjlzx.recyclerview.LRecyclerView>
        </LinearLayout>
    </com.lr.biyou.mywidget.view.PageView>


</LinearLayout>
