<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/dp_45"
    style="@style/title_bar_style">
    <LinearLayout
        android:id="@+id/left_lay"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:gravity="center"
            android:contentDescription="@null"
            />

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"
            android:textColor="@color/blue"
            android:text="返回"/>
    </LinearLayout>
    <TextView
        android:id="@+id/title_text"
        style="@style/title_text_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left_lay"
        app:layout_constraintRight_toLeftOf="@+id/right_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="主题"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        />

    <LinearLayout
        android:id="@+id/right_lay"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_text"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/right_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blue"
            android:text="详情"/>

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:contentDescription="@null"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/divide_line"
        app:layout_constraintTop_toBottomOf="@+id/left_lay"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"/>


</androidx.constraintlayout.widget.ConstraintLayout>
