<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/body_bg">
    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">
        <RelativeLayout
            android:id="@+id/line_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onTabClicked"
            android:state_selected="true"
            android:background="@color/line_background"
            android:layout_weight="1" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linetip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_30"
                />
            <TextView
                android:paddingRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_15"
                android:text="图示"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/list_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onTabClicked"
            android:background="@color/list_background"
            android:layout_weight="1" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_30"
                android:src="@drawable/listtip"
                />

            <TextView
                android:paddingRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_15"
                android:text="列表"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/ll_lay"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/item_padding"
            android:paddingBottom="@dimen/item_padding"
            android:text="付款方"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black_deep"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="请选择"
            android:id="@+id/name_tv"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more_1x"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_5"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line_view" >
    </RelativeLayout>

</LinearLayout>
