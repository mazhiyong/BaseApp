<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <TextView
        android:id="@+id/aviable_money_tv"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text="地址"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/address_et"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入或长按粘贴地址"
            android:textSize="@dimen/sp_13"
            android:paddingBottom="@dimen/dp_5"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/scan_iv"
            android:layout_width="@dimen/dp_20"
            android:src="@drawable/icon6_saomiao"
            android:layout_height="@dimen/dp_20" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/address_iv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_20"
            android:src="@drawable/icon6_dizhi"
            android:layout_height="@dimen/dp_20" />
    </LinearLayout>
    <View
        android:id="@+id/divide_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text="备注"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/number_et"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入备注信息 例:BTC"
            android:textSize="@dimen/sp_13"
            android:paddingBottom="@dimen/dp_5"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/selectall_tv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:text="全部提取"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line" />
    <TextView
        android:id="@+id/middle_money_tv"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:text="手续费：1 USDT"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/red"
        android:text="AAAAA"
        android:alpha="0.6"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/tibi_tv"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:text="确  定"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_8"
        android:enabled="false"
        android:background="@drawable/btn_next"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</LinearLayout>