<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/body_bg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_tv"
            android:layout_margin="@dimen/dp_15"
            android:text="购买USDT"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="单价"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:text="￥ "
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price_tv"
            android:layout_marginRight="@dimen/dp_15"
            android:text="0.00"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <com.androidkun.xtablayout.XTabLayout
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:id="@+id/tab_child"
            app:xTabIndicatorColor="@color/blue1"
            android:layout_gravity="center_vertical"
            app:xTabDividerWidth="@dimen/dp_0"
            app:xTabDividerColor="@color/white"
            app:xTabTextSize="@dimen/sp_14"
            app:xTabDividerWidthWidthText="true"
            app:xTabSelectedTextColor="@color/blue1"
            android:layout_height="@dimen/dp_40">
        </com.androidkun.xtablayout.XTabLayout>
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/background_yuanhuan_gray"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etNumber"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_12"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="请输入"
            android:textSize="@dimen/sp_14"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/type_tv"
            android:text="CNY"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/divide_line"/>

        <TextView
            android:id="@+id/buy_tv"
            android:text="买入"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/number_tv"
        android:text="交易数量 0 USDT"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/gray_light"
        android:gravity="right"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="实付款"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/money_tv"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="￥0.00"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cancel"
            android:background="@drawable/background_corners_gray"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order"
            android:background="@drawable/btn_next"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:text="下单"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_10"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
