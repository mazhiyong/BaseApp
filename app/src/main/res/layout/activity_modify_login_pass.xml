<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="@color/body_bg"
                >

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <ScrollView
        android:id="@+id/personal_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/body_bg"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old_pass"
                    android:textColor="@color/black"
                    android:hint="@string/sure_new_pass"
                    android:textSize="@dimen/sp_15"/>
                <EditText
                    android:id="@+id/old_pass_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:hint="@string/old_pass_hint"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:digits="@string/shuzi_zimu"
                    android:maxLength="11"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"/>
                <ToggleButton
                    android:id="@+id/togglePwd1"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/switch_in"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"

                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_pass"
                    android:textColor="@color/black"
                    android:hint="@string/sure_new_pass"
                    android:textSize="@dimen/sp_15"/>
                <EditText
                    android:id="@+id/new_pass_edit"
                    android:layout_width="0dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="@string/set_new_pass_tip"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:digits="@string/shuzi_zimu"
                    android:maxLength="11"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"/>
                <ToggleButton
                    android:id="@+id/togglePwd2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/switch_in"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/item_padding"
                android:paddingBottom="@dimen/item_padding"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sure_new_pass"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"/>
                <EditText
                    android:id="@+id/sure_again_pass_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:hint="@string/new_pass_hint"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:digits="@string/shuzi_zimu"
                    android:maxLength="11"
                    android:textSize="@dimen/sp_15"
                    android:background="@null"/>
                <ToggleButton
                    android:id="@+id/togglePwd3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/switch_in"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"
                />

            <Button
                android:id="@+id/but_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/but_height"
                android:layout_margin="@dimen/dp_18"
                android:background="@drawable/btn_next"
                android:text="@string/but_submit"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/btn_login_text"
                 />

        </LinearLayout>
    </ScrollView>

</LinearLayout>