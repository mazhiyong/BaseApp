<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/date_corners"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cart_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cart_left_corners"
            android:padding="@dimen/dp_8"
            android:src="@drawable/cart_cut" />

        <EditText
            android:id="@+id/cart_item_edit"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusable="false"
            android:inputType="numberSigned"
            android:background="@null"
             >
        </EditText>

        <ImageView
            android:id="@+id/cart_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cart_right_corners"
            android:focusable="false"
            android:padding="@dimen/dp_8"
            android:src="@drawable/cart_add" />
    </LinearLayout>

</LinearLayout>