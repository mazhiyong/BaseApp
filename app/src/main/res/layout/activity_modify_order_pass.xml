<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#f7f7f7"
              android:orientation="vertical">
    <include
        android:id="@+id/top_layout"
        layout="@layout/title_leftbut_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_pass_tip_tv"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/order_old_pass"
            android:layout_height="wrap_content" />
    </RelativeLayout>





    <com.lr.biyou.mywidget.view.PasswordEditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_45"
        android:background="@null"
        android:padding="@dimen/dp_10"
        app:bgCorner="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/but_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/but_height"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:textSize="@dimen/sp_17"
        android:background="@drawable/btn_next"
        android:text="@string/but_next"
        android:textColor="@color/btn_login_text"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
        <com.lr.biyou.mywidget.view.CustomerKeyboard
            android:id="@+id/custom_key_board"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"/>
</LinearLayout>