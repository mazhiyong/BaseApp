<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:focusable="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1.1"/>
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:padding="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:focusable="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:padding="@dimen/dp_8"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/sp_14"
                android:text="@string/shengqing_date" />
            <TextView
                android:id="@+id/shengqing_date_tv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:padding="@dimen/dp_8"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:text=""
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:focusable="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/sp_14"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:paddingRight="@dimen/dp_8"
                android:text="@string/borrow_money" />
            <TextView
                android:id="@+id/jeikuan_yue_tv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:padding="@dimen/dp_8"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:text=""
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:focusable="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:padding="@dimen/dp_8"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/sp_14"
                android:text="@string/pay_stop_day" />
            <TextView
                android:id="@+id/huankuan_stop_date"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:padding="@dimen/dp_8"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:text=""
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:focusable="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:padding="@dimen/dp_8"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/sp_14"
                android:text="@string/borrow_bianhao" />
            <TextView
                android:id="@+id/jiekuan_code_tv"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:padding="@dimen/dp_8"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:text=""
                android:paddingRight="@dimen/dp_10"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>

</LinearLayout>