<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingBottom="@dimen/dp_5"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        android:focusable="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/state_iv"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lay"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="0dp"
                    android:text="做多 "
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_15"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_deep"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/time_tv"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:text="19/05/06 15:32"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textSize="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_deep"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/all_tv"
                    android:layout_width="wrap_content"
                    android:text="单价"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:paddingRight="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/lay"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_below="@+id/line"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_20"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="@dimen/dp_0"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_number"
                                    android:layout_width="wrap_content"
                                    android:text="数量 1000"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/black_light"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tv_progress"
                                    android:layout_width="wrap_content"
                                    android:text="进度60"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/black_light"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:text="AAA"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/blue1"
                                android:textSize="@dimen/sp_16"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_20"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_20"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_qianbao"
                                android:src="@drawable/icon4_bank"
                                android:layout_width="@dimen/dp_20"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/sp_14"
                                android:layout_height="@dimen/dp_20"/>

                            <ImageView
                                android:id="@+id/iv_alipay"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:src="@drawable/icon4_alipay"
                                android:layout_width="@dimen/dp_20"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/sp_14"
                                android:layout_height="@dimen/dp_20"/>

                            <ImageView
                                android:id="@+id/iv_weipay"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:src="@drawable/icon4_wechat"
                                android:layout_width="@dimen/dp_20"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/sp_14"
                                android:layout_height="@dimen/dp_20"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_buy"
                                android:background="@drawable/btn_next"
                                android:layout_width="@dimen/dp_60"
                                android:text="购买"
                                android:layout_marginRight="@dimen/dp_15"
                                android:paddingTop="@dimen/dp_4"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dp_4"
                                android:paddingLeft="@dimen/dp_6"
                                android:paddingRight="@dimen/dp_6"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
</LinearLayout>