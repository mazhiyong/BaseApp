<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/body_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/per_bg">
        <LinearLayout
            android:id="@+id/title_bar_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                >

                <LinearLayout
                    android:id="@+id/left_back_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/write_back"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:contentDescription="@null"
                        />

                    <TextView
                        android:id="@+id/back_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:gravity="center"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/white"
                        android:text="@string/but_back"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/title_text"
                    style="@style/title_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_140"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    />

                <LinearLayout
                    android:id="@+id/right_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/right_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/right_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_15"
                        android:visibility="gone"/>
                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_bar_view"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:visibility="gone"
                android:background="@drawable/view_search"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btn_login_normal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/hezuo_dx"/>

                <TextView
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"/>
                <TextView
                    android:id="@+id/hezuo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:text="@string/sss"
                    android:textSize="@dimen/sp_15"

                    android:layout_marginRight="@dimen/dp_20"
                    android:drawableRight="@drawable/zongzichan_arrow"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/yue"
                android:alpha="0.6"
                android:textColor="#fffefe"
                android:textSize="@dimen/sp_15"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="0.00"
                android:textColor="@color/white"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_28"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="@string/left_yue"
                        android:alpha="0.6"
                        android:textColor="#fffefe"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/keyong_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="--"
                        android:textSize="@dimen/sp_16"
                        android:layout_gravity="center|left"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dongjie_yue"
                        android:alpha="0.6"
                        android:textColor="#fffefe"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="center|right"/>
                    <TextView
                        android:id="@+id/dongjie_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_gravity="center|right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/body_bg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/chongzhi_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        android:focusable="false">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/dp_8"
                android:visibility="gone"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/chongzhi" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_list_idex"
                android:paddingRight="@dimen/dp_15"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/tixian_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="false">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/title_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/dp_8"
                android:visibility="gone"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:src="@drawable/android_list_idex"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/tixian" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/android_list_idex"
                android:paddingRight="@dimen/dp_15"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>

</LinearLayout>