<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        app:cardPreventCornerOverlap="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        android:focusable="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_lay"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="信用融资"
                    android:textColor="@color/black_dark"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/type_tv"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="审核中"
                    android:clickable="false"
                    android:textSize="@dimen/sp_14"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:id="@+id/state_tv"
                    android:textColor="@color/btn_login_normal"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/up_corners"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:id="@+id/line"
                android:layout_below="@+id/ll_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>
            <LinearLayout
                android:id="@+id/ll2_lay"
                android:layout_below="@+id/line"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="申请日期"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/date_tv"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="借款金额"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_light"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/money_tv"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:textColor="@color/black22"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="年化利率"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/rate_tv"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="借款期限"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/qixian_tv"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"

                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="借款编号"
                        android:hint="@string/four_zi"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/number_tv"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="出借人"
                        android:hint="@string/four_zi"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/people_tv"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:textColor="@color/black22"
                        android:textSize="@dimen/sp_14"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_below="@+id/ll2_lay"
                android:layout_height="@dimen/divide_hight"
                android:background="@color/divide_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_below="@+id/line4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/upload_tv"
                    android:background="@drawable/background_blue"
                    android:text="上传借款用途凭证"
                    android:textSize="14sp"
                    android:textColor="@color/btn_login_normal"
                    android:padding="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/plan_tv"
                    android:background="@drawable/background_blue"
                    android:text="还款计划"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="@color/btn_login_normal"
                    android:padding="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/huankuan_tv"
                    android:textSize="14sp"
                    android:background="@drawable/btn_next"
                    android:text="提前还款"
                    android:textColor="@color/white"
                    android:padding="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_hight"
        android:background="@color/divide_line"/>
</LinearLayout>