<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/contentLay"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/bac_lay"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_165"
            android:background="@drawable/de_ic_bubble_right"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/hongbao"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
            <TextView
                android:id="@+id/contentTextView"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嗯嗯嗯嗯,嗯嗯嗯嗯"
                android:lineSpacingExtra="@dimen/sp_6"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/red_tv"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left|center"
            android:text="币友红包"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_8"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999" />
    </LinearLayout>

</RelativeLayout>
