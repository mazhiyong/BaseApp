<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videoContentLayout"
    android:padding="@dimen/dp_10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 图片 -->
    <cn.wildfire.chat.kit.widget.BubbleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:adjustViewBounds="true"
        android:minWidth="@dimen/dp_80"
        android:scaleType="fitCenter"
        app:bubble_angle="@dimen/dp_10"
        app:bubble_arrowHeight="@dimen/dp_10"
        app:bubble_arrowLocation="right"
        app:bubble_arrowOffset="-5dp"
        app:bubble_arrowTop="@dimen/dp_20"
        app:bubble_arrowWidth="@dimen/dp_8"
        app:bubble_showShadow="false"
        app:bubble_showText="false"
        tools:background="@color/gray" />

    <cn.wildfire.chat.kit.widget.CircularProgressBar
        android:id="@+id/cpbLoading"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/playImageView"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:src="@mipmap/img_video_play_session"
        android:visibility="gone" />

</RelativeLayout>
