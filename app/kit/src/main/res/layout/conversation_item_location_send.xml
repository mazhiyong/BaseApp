<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locationLinearLayout"
    android:layout_width="@dimen/dp_180"
    android:layout_height="wrap_content"
    android:background="@drawable/img_location_send"
    android:orientation="vertical">

    <TextView
        android:id="@+id/locationTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxWidth="@dimen/dp_150"
        android:minHeight="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="嗯嗯嗯嗯嗯嗯嗯"
        android:textColor="#444444"
        android:textColorLink="#666666"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/locationImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_180"
        android:maxWidth="@dimen/dp_180"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_location" />
</LinearLayout>

